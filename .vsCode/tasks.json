{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile current file",
            "command": "ssh -t ${input:targetSystemUser}@${input:targetSystemName} -p ${input:targetSystemPort} 'PATH=/QOpenSys/pkgs/bin:$PATH;cd ${input:targetSystemProjectPath};gmake ${fileBasename} OUTPUT=*PRINT'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "c",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*),\\s+(\\d+).(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Build all",
            "command": "ssh ${input:targetSystemUser}@${input:targetSystemName} -p ${input:targetSystemPort} 'PATH=/QOpenSys/pkgs/bin:$PATH;cd ${input:targetSystemProjectPath};gmake all'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build release savefile",
            "command": "ssh ${input:targetSystemUser}@${input:targetSystemName} -p ${input:targetSystemPort} 'PATH=/QOpenSys/pkgs/bin:$PATH;cd ${input:targetSystemProjectPath};gmake release'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "targetSystemUser",
            "type": "promptString",
            "description": "Specify the target system user name",
            "password": false
        },
        {
            "id": "targetSystemName",
            "type": "promptString",
            "description": "Specify the target system name",
            "password": false
        },
        {
            "id": "targetSystemPort",
            "type": "pickString",
            "description": "Specify the target system port for ssh",
            "options": [
                "22",
                "2222"
            ],
            "default": "2222"
        },
        {
            "id": "targetSystemProjectPath",
            "type": "promptString",
            "description": "Specify the target system project path",
            "default": "./prj/cvtrpgfree/",
            "password": false
        }
    ]
}